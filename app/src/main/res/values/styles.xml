<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/bg_window</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>

        <item name="actionBarSize">@dimen/action_bar_default_height</item>
        <item name="textColorError">#FFD50000</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.Dialog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Widget.AppBarLayout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Widget.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">@dimen/default_toolbar_button_navigation_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Settings.Item" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_settings_item</item>
        <item name="android:textColor">#F000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.TextView.Dialog" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#F000</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="TextAppearance.SignIn.Input" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">#FF757575</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.SignIn.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SignIn.Error" parent="TextAppearance.Design.Error">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_shrink_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_expand_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="Animation.Dialog" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
</resources>
