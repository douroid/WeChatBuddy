<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingEnd="@dimen/right_distance"
    android:paddingLeft="@dimen/left_distance"
    android:paddingRight="@dimen/right_distance"
    android:paddingStart="@dimen/left_distance"
    android:paddingTop="10dp"
    tools:background="#33659c3d">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/play"
            android:layout_width="216dp"
            android:layout_height="68dp"
            android:background="@drawable/bg_voice"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_voice_play"
                tools:ignore="contentDescription" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#F000"
            android:textSize="16sp"
            tools:text="大江东去，浪淘尽，千古风流人物。故垒西边，人道是，三国周郎赤壁。" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="10dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_send"
        tools:ignore="contentDescription" />
</LinearLayout>